# DeepSeek-Coder Environment Configuration

# Model Configuration
MODEL_SIZE=base           # Options: base (6.7B), large (33B)

# Server Configuration
PORT=8000                 # Port for the API server
LOG_LEVEL=INFO            # Options: DEBUG, INFO, WARNING, ERROR

# Directory Configuration
MODEL_PATH=./models       # Directory for model weights
DATA_DIR=./data           # Directory for data
LOG_DIR=./logs            # Directory for logs

# GPU Configuration
CUDA_VISIBLE_DEVICES=0    # GPU devices to use (e.g., 0,1,2 for multiple GPUs)
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128  # Memory optimization

# Security Configuration
ENABLE_AUTH=false         # Enable API key authentication (true/false)
API_KEYS=sk-abc123,sk-def456  # Comma-separated list of valid API keys

# Rate Limiting
RATE_LIMIT=100            # Maximum requests per hour per API key
MAX_REQUEST_TOKENS=4096   # Maximum tokens per request

# Elasticsearch Configuration (for knowledge storage)
ELASTICSEARCH_HOST=elasticsearch:9200  # Elasticsearch host (for Docker setup)

# Monitoring
ENABLE_TELEMETRY=false    # Enable usage telemetry reporting
