# PhotoPrism Environment Variables
# ------------------------------
# This is an example configuration file with all available settings.
# For production deployment, copy this to .env.prod and modify as needed.

# General settings
PHOTOPRISM_ADMIN_USER=admin
PHOTOPRISM_ADMIN_PASSWORD=insecure
PHOTOPRISM_AUTH_MODE=password
PHOTOPRISM_SITE_URL=http://localhost:2342
PHOTOPRISM_SITE_TITLE=PhotoPrism
PHOTOPRISM_PORT=2342

# Database settings
MYSQL_PASSWORD=photoprism
MYSQL_ROOT_PASSWORD=photoprism
DB_BUFFER_POOL_SIZE=256M
DB_CPU_LIMIT=1
DB_MEMORY_LIMIT=1G
DB_CPU_RESERVATION=0.2
DB_MEMORY_RESERVATION=256M

# Storage paths
PHOTOPRISM_STORAGE_PATH=./storage
PHOTOPRISM_ORIGINALS_PATH=./originals
PHOTOPRISM_IMPORT_PATH=./import
PHOTOPRISM_DATABASE_PATH=./database
PHOTOPRISM_REDIS_PATH=./redis

# Resource limits
PHOTOPRISM_CPU_LIMIT=2
PHOTOPRISM_MEMORY_LIMIT=2G
PHOTOPRISM_CPU_RESERVATION=0.5
PHOTOPRISM_MEMORY_RESERVATION=512M
BRAINS_CPU_LIMIT=1
BRAINS_MEMORY_LIMIT=1G
BRAINS_CPU_RESERVATION=0.2
BRAINS_MEMORY_RESERVATION=256M
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=256M

# Feature toggles
PHOTOPRISM_DISABLE_TLS=false
PHOTOPRISM_DISABLE_CHOWN=false
PHOTOPRISM_DISABLE_WEBDAV=false
PHOTOPRISM_DISABLE_SETTINGS=false
PHOTOPRISM_DISABLE_BACKUPS=false
PHOTOPRISM_DISABLE_EXIFTOOL=false
PHOTOPRISM_DISABLE_PLACES=false
PHOTOPRISM_DISABLE_TENSORFLOW=false
PHOTOPRISM_DISABLE_FACES=false
PHOTOPRISM_DISABLE_CLASSIFICATION=false
PHOTOPRISM_DETECT_NSFW=false
PHOTOPRISM_UPLOAD_NSFW=true
PHOTOPRISM_READONLY=false
PHOTOPRISM_EXPERIMENTAL=false

# Performance settings
PHOTOPRISM_WORKERS=3
PHOTOPRISM_THUMB_SIZE=2048
PHOTOPRISM_THUMB_LIMIT=1000
PHOTOPRISM_THUMB_UNCACHED=false
PHOTOPRISM_JPEG_QUALITY=85
BRAINS_WORKERS=2
BRAINS_READ_TIMEOUT=60s
BRAINS_WRITE_TIMEOUT=60s

# Logging
PHOTOPRISM_LOG_LEVEL=info
BRAINS_LOG_LEVEL=info

# SSL/TLS Settings (for reverse proxy)
PHOTOPRISM_SSL_CERT=/etc/ssl/certs/photoprism.crt
PHOTOPRISM_SSL_KEY=/etc/ssl/private/photoprism.key
