# MCP Ecosystem Environment Variables - Comprehensive Example
# This file lists all potential environment variables for the Maximum Verbose MCP Ecosystem.
# Copy this to .env (for local dev) or configure in your CI/CD / cloud secrets manager.

# ============================================================================
# üåê GENERAL APPLICATION SETTINGS
# ============================================================================
APP_NAME="WindsurfMCP"
APP_ENV="development" # production, staging, development, test
APP_DEBUG="True"      # Set to False in production
APP_HOST="0.0.0.0"
APP_PORT="8000"

# ============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ============================================================================
DATABASE_TYPE="postgresql" # postgresql, mysql, sqlite, mongodb
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="windsurf_mcp_db"
DATABASE_USER="mcp_user"
DATABASE_PASSWORD="super_secret_db_password"
# Example for SQLite: DATABASE_URL="sqlite+aiosqlite:///./windsurf_mcp.db"
DATABASE_URL="${DATABASE_TYPE}://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}"

# ============================================================================
# üîë API KEYS & EXTERNAL SERVICE INTEGRATIONS
# ============================================================================
EXTERNAL_API_KEY="your_external_api_key_here"
AUTH_SECRET_KEY="super_secret_auth_key_for_jwt_or_sessions"

# ============================================================================
# üìä OBSERVABILITY - LOGGING
# ============================================================================
# Centralized logging endpoint (e.g., Loki, ELK Stack, DataDog, Splunk)
LOG_COLLECTOR_URL="http://localhost:3100/loki/api/v1/push"
LOG_LEVEL="INFO" # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json" # json, text
LOG_SERVICE_NAME="windsurf-mcp-service"

# ============================================================================
# üìà OBSERVABILITY - METRICS
# ============================================================================
# Prometheus push gateway or agent endpoint
METRICS_COLLECTOR_URL="http://localhost:9091/metrics/job/windsurf-mcp-app"
METRICS_ENABLED="True" # Enable/disable metrics collection
METRICS_INTERVAL_SECONDS="15"

# ============================================================================
# üî≠ OBSERVABILITY - TRACING
# ============================================================================
# OpenTelemetry Collector endpoint
TRACING_COLLECTOR_HOST="localhost"
TRACING_COLLECTOR_PORT="4317" # gRPC port for OTLP
TRACING_ENABLED="True" # Enable/disable distributed tracing
TRACING_SERVICE_NAME="windsurf-mcp-tracer"
TRACING_EXPORTER_PROTOCOL="grpc" # grpc, http/protobuf

# ============================================================================
# ‚òÅÔ∏è CLOUD PROVIDER CREDENTIALS (Example for AWS)
# ============================================================================
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY_ID"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_ACCESS_KEY"
AWS_REGION="us-east-1"

# ============================================================================
# üîí SECRETS MANAGEMENT (e.g., HashiCorp Vault)
# ============================================================================
VAULT_ADDR="http://127.0.0.1:8200"
VAULT_TOKEN="your_vault_token"
VAULT_PATH="secret/data/windsurf-mcp/app"

# ============================================================================
# üê≥ DOCKER / CONTAINER ORCHESTRATION
# ============================================================================
DOCKER_REGISTRY_USERNAME="your_docker_username"
DOCKER_REGISTRY_PASSWORD="your_docker_password"
DOCKER_IMAGE_TAG="latest"

# ============================================================================
# ü§ñ AI / ML INTEGRATIONS
# ============================================================================
OPENAI_API_KEY="your_openai_api_key"
HUGGINGFACE_API_TOKEN="your_huggingface_api_token"
MLFLOW_TRACKING_URI="http://localhost:5000"

# ============================================================================
# ‚öôÔ∏è CI/CD SPECIFIC (GitHub Actions, Jenkins, GitLab CI)
# ============================================================================
CI_COMMIT_SHA="${{ github.sha }}"
CI_RUN_ID="${{ github.run_id }}"
CI_WORKFLOW_NAME="${{ github.workflow }}"
