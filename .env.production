# Application Settings
ENVIRONMENT=production
DEBUG=false
# Generate a strong secret key: openssl rand -hex 32
SECRET_KEY=change-this-to-a-strong-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Database Configuration
# For production, consider using a managed database service
DATABASE_URL=sqlite+aiosqlite:////data/casebuilder.db

# Redis Configuration (uncomment if using Redis)
# REDIS_URL=redis://redis:6379/0

# File Storage
UPLOAD_DIR=/data/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB

# CORS (restrict to your domain in production)
CORS_ORIGINS=["https://yourdomain.com"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true

# Rate Limiting (requests per minute per IP)
RATE_LIMIT=100
